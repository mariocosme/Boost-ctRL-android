<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/team_one_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorCloudWhite"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_team_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_between_xs"
            android:contentDescription="@string/home_team_logo" />

        <TextView
            android:id="@+id/home_team_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_between_s"
            android:layout_marginEnd="@dimen/space_between_s"
            android:textColor="@color/colorFiord"
            android:layout_toStartOf="@+id/home_team_score_text"
            android:layout_toEndOf="@+id/home_team_iv"
            android:singleLine="true"
            android:textSize="@dimen/text_size_14_pt"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/space_between_s"
            android:paddingBottom="@dimen/space_between_s"
            tools:text="Dignitas"/>

        <TextView
            android:id="@+id/home_team_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/space_between_s"
            android:textColor="@color/colorFiord"
            android:textSize="@dimen/text_size_14_pt"
            android:layout_centerVertical="true"
            tools:text="-"/>
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/team_one_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorCloudWhite"
        android:layout_below="@+id/view"
        android:layout_marginTop="1dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/away_team_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_between_xs"
            android:layout_centerVertical="true"
            android:contentDescription="@string/away_team_logo" />

        <TextView
            android:id="@+id/away_team_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_between_s"
            android:layout_toStartOf="@+id/away_team_score_text"
            android:layout_toEndOf="@+id/away_team_iv"
            android:singleLine="true"
            android:textColor="@color/colorFiord"
            android:textSize="@dimen/text_size_14_pt"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/space_between_s"
            android:paddingBottom="@dimen/space_between_s"
            tools:text="Renault Vitality" />

        <TextView
            android:id="@+id/away_team_score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/space_between_s"
            android:textSize="@dimen/text_size_14_pt"
            android:textColor="@color/colorFiord"
            android:layout_centerVertical="true"
            tools:text="-" />

    </RelativeLayout>

</RelativeLayout>